<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp">

    <ImageView
        android:id="@+id/img_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_gray_tick_circle"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_label_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        tools:text="标签号"/>

    <TextView
        android:id="@+id/txt_expand_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/txt_label_number"
        android:layout_toRightOf="@+id/txt_label_number"
        tools:text="扩展号"/>

    <TextView
        android:id="@+id/txt_pic_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/txt_expand_number"
        android:layout_toRightOf="@+id/txt_expand_number"
        tools:text="图号"/>

    <TextView
        android:id="@+id/txt_position_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/txt_pic_number"
        android:layout_toRightOf="@+id/txt_pic_number"
        tools:text="位置1"/>

    <TextView
        android:id="@+id/txt_orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/txt_position_1"
        android:layout_toRightOf="@+id/txt_position_1"
        tools:text="方向"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>